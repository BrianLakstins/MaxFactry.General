<div id="footer">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <hr />
                @if (Request.IsAuthenticated)
                {
                    <div>
                        You are logged in as [@Html.ActionLink(User.Identity.Name, "manage", "MaxSecurity", routeValues: null, htmlAttributes: new { id = "udManageLink" })]
                    </div>
                    <ul>
                        <li>@Html.ActionLink("Log Out", "logout", "MaxSecurity", routeValues: null, htmlAttributes: new { id = "udLogOutLink" })</li>
                    </ul>
                }
                else
                {
                    <ul>
                        <li>@Html.ActionLink("Log In", "login", "MaxSecurity", routeValues: new { ReturnUrl = Request.Url }, htmlAttributes: new { id = "udLogInLink" })</li>
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
